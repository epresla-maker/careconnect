rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - bejelentkezett felhasználók írhatnak/olvashatnak
    match /users/{userId} {
      allow read: if request.auth != null;
      // Email verifikáció engedélyezése: ha verificationToken-nel query-zünk vagy frissítünk
      allow read: if request.query.verificationToken != null;
      allow write: if request.auth != null && request.auth.uid == userId;
      // Email verifikáció update engedélyezése
      allow update: if request.resource.data.keys().hasOnly(['emailVerified', 'verificationToken', 'verificationTokenExpires'])
                    && request.resource.data.emailVerified == true;
    }
    
    // Pharmagister collections
    match /pharmacies/{pharmacyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /gigs/{gigId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /applications/{applicationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Minden más collection - auth required
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
