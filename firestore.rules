rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Olvasás: mindenki (szükséges a verifikációs token query-hez)
      allow read: if true;
      
      // Írás: csak saját profil
      allow create, delete: if request.auth != null && request.auth.uid == userId;
      
      // Update: saját profil VAGY email verifikáció (bárki frissítheti ezeket a mezőket)
      allow update: if (request.auth != null && request.auth.uid == userId) ||
                       (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['emailVerified', 'verificationToken', 'verificationTokenExpires']) &&
                        request.resource.data.emailVerified == true);
    }
    
    // Pharmagister collections
    match /pharmacies/{pharmacyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /gigs/{gigId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /applications/{applicationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Minden más collection - auth required
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
