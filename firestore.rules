rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - bejelentkezett felhasználók írhatnak/olvashatnak
    match /users/{userId} {
      allow read: if request.auth != null;
      // Email verifikáció olvasás engedélyezése - bárki query-zheti token alapján
      allow read: if true; // Szükséges a where query-hez token alapján
      allow write: if request.auth != null && request.auth.uid == userId;
      // Email verifikáció update engedélyezése - csak az emailVerified mezőt lehet true-ra állítani
      allow update: if request.resource.data.keys().hasOnly(['emailVerified', 'verificationToken', 'verificationTokenExpires'])
                    && request.resource.data.emailVerified == true;
    }
    
    // Pharmagister collections
    match /pharmacies/{pharmacyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /gigs/{gigId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /applications/{applicationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Minden más collection - auth required
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
